#include<bits/stdc++.h>
#include<fstream.h>
#include<conio.h>
#include<math.h>
#include<iomanip.h>
#include<ctype.h>
#include<stdlib.h>
#include<string.h>
#include<dos.h>
#include<graphics.h>
int p=10,q=100,s=10,x[300],y[300],fruitx,fruity,score=0;                               //pos,size of snake
void grow()
{
	if(p>=fruitx-5&&p<=fruitx+5&&q>=fruity-5&&q<=fruity+5)
	{
	s+=3;
	fruitx=100+random(500);
	fruity=50+random(300);
	score+=10;
	}
}

void setup()
{
	for(int i=0;i<s;i++)
	{
		x[i]=p-i*5;
		y[i]=q;
	}
}

void map()                                    //boundary for snake
{
	 int gd=DETECT,gm;
	 initgraph(&gd,&gm,"c:/tc/bgi");
	 rectangle(0,50,600,400);
	/* for(int i=200;i<400;i++)
	 {
		for(int j=100;j<400;j++)
		 if(i==0||i==14||j==0||j==69)
		 cout<<'#';			
		 else
		 cout<<' ';
		 cout<<endl;
	 }*/
}

void move(char &k) 				     //perpetual movement of snake
{
		 char t=k;
		 if(kbhit())
		 k=getch();
		 if(t=='d'&&k=='a'||t=='a'&&k=='d'||t=='w'&&k=='s'||t=='s'&&k=='w')
		 k=t;
		 for(int i=0;i<s;i++)
		 {
			outtextxy(x[i],y[i],"o");
		 }
}

void body()
{
	for(int i=s;i>0;i--)
	{
		x[i]=x[i-1];
		y[i]=y[i-1];
	}
	x[0]=p;
	y[0]=q;
}

void controls(char x)                          //to change direction
{
		 switch(x)
		 {
			case 'w':q-=3;break;
			case 's':q+=3;break;
			case 'a':p-=4;break;
			case 'd':p+=4;
		 }
}

void gameover()
{
	if(p==0||p==600||q==50||q==400)
	{
	outtextxy(300,20,"GAMEOVER");
	cout<<"score:"<<score;
	delay(1500);
	exit(1);
	}
	for(int i=1;i<s;i++)
	if(x[i]==p&&y[i]==q)
	{
	outtextxy(300,20,"GAMEOVER");
	cout<<"score:"<<score;
	delay(1500);
	exit(1);
	}
}

int main()
{
	int x,y;
	char k='d';
	randomize();
	fruitx=100+random(500);
	fruity=100+random(300);
	map();
	setup();
	setfillstyle(SOLID_FILL,RED);
	while(k=='w'||k=='a'||k=='s'||k=='d')
	{
		clrscr();
		circle(fruitx+2,fruity+3,3);
		floodfill(fruitx+2,fruity+3,WHITE);
		controls(k);
		body();
		move(k);
		grow();
		gameover();
		cout<<score;
		delay(25);
	}
	closegraph();
	return 0;
}
